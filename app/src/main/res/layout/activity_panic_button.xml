<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.asus.panicbutton.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#c9c9c9">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:scaleType="centerInside"
            android:background="@null"
            android:src="@drawable/panic_button"
            android:onClick="sendingLaporan"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/panicTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#28bab2"
            android:src="@drawable/panic_icon_red"
            android:scaleType="centerInside"/>
        <ImageButton
            android:id="@+id/alertTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f7f7f7"
            android:src="@drawable/alert_icon_blue"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:scaleType="centerInside"/>
        <ImageButton
            android:id="@+id/profileTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f7f7f7"
            android:src="@drawable/profile_icon_blue"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:scaleType="centerInside"/>
    </LinearLayout>

</LinearLayout>
